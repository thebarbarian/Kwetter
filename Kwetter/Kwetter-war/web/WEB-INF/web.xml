<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <!--Allow directory listing-->
    <servlet>
        <servlet-name>default</servlet-name>
        <servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>0</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>kwetterRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.xhtml</form-login-page>
            <form-error-page>/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-constraint>
        <display-name>superdude</display-name>
        <web-resource-collection>
            <web-resource-name>superdude</web-resource-name>
            <description/>
            <url-pattern>/admin/adminpagina.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>superdude</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>loggeduser</display-name>
        <web-resource-collection>
            <web-resource-name>loggeduser</web-resource-name>
            <description/>
            <url-pattern>/users/loggedInUser.xhtml</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>Profile pagina</web-resource-name>
            <description/>
            <url-pattern>/users/templateProfile.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>loggeduser</role-name>
        </auth-constraint>
    </security-constraint>  
    <security-role>
        <description>admin</description>
        <role-name>superdude</role-name>
    </security-role>
    <security-role>
        <description>ingelogde gebruiker</description>
        <role-name>loggeduser</role-name>
    </security-role>
</web-app>
